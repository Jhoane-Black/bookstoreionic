{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@Smarts/*" : ["app/components/smart/*"],
      "@Dummies/*" : ["app/components/dummies/*"],
      "@Resources/*" : ["app/resources/*"],
      "@Modules/*" : ["app/modules/*"],
      "@Utils/*" : ["app/util/*"],
      "@services/*" : ["app/services/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}